<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 52 %>
      <%= link_to user.name, user %>
        <% if current_user.admin? && !current_user?(user) %>
          <%= link_to "delete", user, method: :destroy,
                                      data: { confirm: "You sure?" } %>
        <% end %>
    </li>
<!-- <li>this is test 1</li> -->
  <% end %>
</ul>

<%= will_paginate %>